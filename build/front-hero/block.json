{
  "apiVersion": 3,
  "name": "fm/front-hero",
  "title": "Front Page Hero",
  "category": "media",
  "icon": "format-image",
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "anchor": true,
    "html": false
  },
  "attributes": {
    "desktopId": {
      "type": "number"
    },
    "desktopAlt": {
      "type": "string",
      "default": ""
    },
    "mobile1Id": {
      "type": "number"
    },
    "mobile1Alt": {
      "type": "string",
      "default": ""
    },
    "mobile2Id": {
      "type": "number"
    },
    "mobile2Alt": {
      "type": "string",
      "default": ""
    },
    "aspectRatioPreset": {
      "type": "string",
      "default": "banner"
    },
    "ratioDesktop": {
      "type": "string",
      "default": "384/120"
    },
    "ratioMobile": {
      "type": "string",
      "default": "8/5"
    },
    "roundedCorners": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "render": "file:./render.php"
}